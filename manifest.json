{
  "manifest_version": 3,
  "name": "Claude Usage Time Bar",
  "version": "1.0.0",
  "description": "Adds time progression bars to Claude usage page for visual comparison of usage vs time elapsed",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Claude Usage Time Bar"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/settings/usage*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
